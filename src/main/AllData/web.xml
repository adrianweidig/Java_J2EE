<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>KIT J2EE Projekt</display-name>

    <!-- Session Timeout - KORREKTE STRUKTUR -->
    <session-config>
        <session-timeout>30</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
        </cookie-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>

    <!-- Listener -->
    <listener>
        <listener-class>weidig.adrian.java_j2ee.listener.AppLifecycleListener</listener-class>
    </listener>

    <listener>
        <listener-class>weidig.adrian.java_j2ee.listener.AppAttributeListener</listener-class>
    </listener>

    <listener>
        <listener-class>weidig.adrian.java_j2ee.listener.RequestLifecycleListener</listener-class>
    </listener>

    <listener>
        <listener-class>weidig.adrian.java_j2ee.listener.RequestAttributeListener</listener-class>
    </listener>

    <listener>
        <listener-class>weidig.adrian.java_j2ee.listener.SessionLifecycleListener</listener-class>
    </listener>

    <listener>
        <listener-class>weidig.adrian.java_j2ee.listener.SessionAttributeListener</listener-class>
    </listener>

</web-app>
